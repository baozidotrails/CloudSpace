<div class="container">
  <%= form_for :session, url: sessions_path, html: { class: 'main_sign_in_form error_form' } do |f| %>
    <div>
      <p><%= f.email_field :email, placeholder: '電子郵件' %></p>
      <p><%= f.password_field :password, placeholder: '密碼' %></p>
      <p>
        <%= f.submit '登入', class: 'btn' %>
      </p>
    </div>
  <% end %>
</div>